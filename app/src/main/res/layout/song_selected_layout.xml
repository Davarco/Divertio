<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/black">

    <ImageView
        android:id="@+id/song_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/default_song_icon"/>

    <TextView
        android:id="@+id/song_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/song_icon"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:textSize="16sp"
        android:gravity="bottom"
        android:text="@string/song_default_name"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/song_composer"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_toRightOf="@id/song_icon"
        android:layout_below="@id/song_name"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:text="@string/song_default_composer"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/song_overflow"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/overflow_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"/>

</RelativeLayout>