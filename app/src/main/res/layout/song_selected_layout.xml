<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/blue"
    android:alpha="0.7">

    <TextView
        android:id="@+id/song_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:textSize="14sp"
        android:gravity="bottom"
        android:text="@string/song_default_name"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:layout_toLeftOf="@+id/song_overflow"
        android:layout_toStartOf="@+id/song_overflow"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

    <TextView
        android:id="@+id/song_composer"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_below="@id/song_name"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:text="@string/song_default_composer"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:layout_toLeftOf="@+id/song_overflow"
        android:layout_toStartOf="@+id/song_overflow"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

    <ImageButton
        android:id="@+id/song_overflow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/overflow_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:padding="100dp"/>

</RelativeLayout>