<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/black">

    <ImageView
        android:id="@+id/playlist_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/default_song_icon"/>

    <TextView
        android:id="@+id/playlist_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/playlist_icon"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:textSize="16sp"
        android:gravity="bottom"
        android:text="@string/song_default_name"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/playlist_size"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_toRightOf="@id/playlist_icon"
        android:layout_below="@id/playlist_name"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:text="@string/song_default_composer"
        android:textColor="@color/white" />

</RelativeLayout>