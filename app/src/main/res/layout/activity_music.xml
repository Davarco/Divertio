<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context="com.lunchareas.divertio.activities.PlaylistActivity">

    <!-- Menu drawer (toggle) -->
    <RelativeLayout
        android:id="@+id/menu_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">
        <android.support.v4.widget.DrawerLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/menu_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/menu_drawer_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Image -->
                    <LinearLayout
                        android:id="@+id/song_cover"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:alpha="0.5"
                        android:orientation="vertical">
                        <!--
                        <ImageView
                            android:id="@+id/song_cover"
                            android:layout_marginLeft="64dp"
                            android:layout_marginRight="64dp"
                            android:layout_marginTop="64dp"
                            android:layout_marginBottom="@dimen/activity_vertical_margin"
                            android:layout_width="224dp"
                            android:layout_height="224dp"
                            android:layout_gravity="center"
                            android:src="@drawable/default_song_icon"
                            android:scaleType="fitXY"/>
                            -->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/song_name"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.8"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:gravity="bottom|center_horizontal"
                            android:text="@string/song_default_name"/>
                        <TextView
                            android:id="@+id/song_composer"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.6"
                            android:textSize="16sp"
                            android:gravity="center_vertical|center_horizontal"
                            android:textColor="@color/white"
                            android:text="@string/song_default_composer"/>
                    </LinearLayout>

                    <!-- Buttons -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/button_panel"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="4dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/ic_shuffle"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="4dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/ic_skip_previous"/>
                        <ImageView
                            android:id="@+id/play_button"
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_play"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/ic_skip_next"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/ic_replay"/>
                    </LinearLayout>

                    <!-- Control -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:layout_marginBottom="@dimen/activity_vertical_margin">
                        <SeekBar
                            android:id="@+id/progress_bar"
                            android:layout_marginLeft="32dp"
                            android:layout_marginStart="32dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal" />

                        <TextView
                            android:id="@+id/time_info"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            android:text="@string/default_time_text"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <!--
            <ListView
                android:layout_marginTop="?attr/actionBarSize"
                android:id="@+id/menu_drawer_list"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:choiceMode="singleChoice"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:background="@android:color/transparent" />
                -->
        </android.support.v4.widget.DrawerLayout>
    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent">

    </android.support.v7.widget.Toolbar>

</RelativeLayout>