<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context="com.lunchareas.divertio.activities.MainActivity">

    <!-- Widget Toolbar -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/alt_blue"
        android:elevation="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <Button
                android:id="@+id/menu_toggle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/menu_icon"
                android:layout_width="36dp"
                android:layout_height="36dp" />
            <TextView
                android:id="@+id/bar_title"
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:layout_marginTop="-36dp"
                android:layout_toRightOf="@+id/menu_toggle"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:gravity="bottom"
                android:text="@string/playlist_name"
                android:textSize="24sp"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <!-- Menu drawer (toggle) -->
    <RelativeLayout
        android:id="@+id/menu_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_bar">
        <android.support.v4.widget.DrawerLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/menu_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/menu_drawer_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <!-- List of playlists -->
            <ListView
                android:id="@+id/playlist_list"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#000000"
                android:dividerHeight="2dp">
            </ListView>

            <!-- Drawer list styling -->
            <ListView
                android:id="@+id/menu_drawer_list"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:choiceMode="singleChoice"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:background="@color/gray"/>
        </android.support.v4.widget.DrawerLayout>
    </RelativeLayout>

    <!-- Song control bar (toggle) -->
    <RelativeLayout
        android:id="@+id/song_bar_main"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true">

        <!--

        Removed photo cover from bar...

        <ImageView
            android:id="@+id/song_bar_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/default_song_icon"/>
        -->

        <RelativeLayout
            android:id="@+id/song_bar"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <!-- Upper bar is useless atm

            <LinearLayout
                android:id="@+id/song_text_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/song_text_name"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="16sp"
                    android:text="@string/song_default_name"/>
                <TextView
                    android:id="@+id/song_text_by"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/song_text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="16sp"
                    android:text=" by "/>
                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/song_text_by"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="16sp"
                    android:text="@string/song_default_composer"/>
            </LinearLayout>

            -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="0dp">
                <!--
                <ImageButton
                    android:id="@+id/rewind_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rewind"/>
                <ImageButton
                    android:id="@+id/play_button"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/play_red"/>
                <ImageButton
                    android:id="@+id/forward_button"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/fastforward"/>
                -->
                <ImageButton
                    android:id="@+id/play_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/play_red"/>
                <SeekBar
                    android:id="@+id/progress_bar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal" />
                <TextView
                    android:id="@+id/time_info"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center_vertical|end"
                    android:text="@string/default_time_text"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
