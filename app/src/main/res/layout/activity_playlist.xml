<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context="com.lunchareas.divertio.activities.PlaylistActivity">

    <!-- Menu drawer (toggle) -->
    <RelativeLayout
        android:id="@+id/menu_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.DrawerLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/menu_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/menu_drawer_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="48dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/playlist_background"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/black">
                        <TextView
                            android:id="@+id/playlist_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:shadowColor="#000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="3"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginStart="@dimen/activity_horizontal_margin"
                            android:layout_marginBottom="@dimen/activity_horizontal_margin"
                            android:textSize="28sp"
                            android:text="@string/app_name"/>
                    </RelativeLayout>

                    <ListView
                        android:id="@+id/song_list"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:divider="#000000"
                        android:dividerHeight="2dp"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/playlist_play_button"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_gravity="center_vertical|right"
                    android:src="@drawable/ic_play"/>

            </FrameLayout>

            <!--
            <ListView
                android:id="@+id/menu_drawer_list"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:choiceMode="singleChoice"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:background="@color/gray"/>
                -->

        </android.support.v4.widget.DrawerLayout>
    </RelativeLayout>


    <!-- Song control bar (toggle) -->
    <RelativeLayout
        android:id="@+id/song_bar_main"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true">

        <!--

        Removed photo cover from bar...

        <ImageView
            android:id="@+id/song_bar_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/default_song_icon"/>
        -->

        <RelativeLayout
            android:id="@+id/song_bar"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <!-- Upper bar is useless atm

            <LinearLayout
                android:id="@+id/song_text_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/song_text_name"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="16sp"
                    android:text="@string/song_default_name"/>
                <TextView
                    android:id="@+id/song_text_by"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/song_text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="16sp"
                    android:text=" by "/>
                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/song_text_by"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="16sp"
                    android:text="@string/song_default_composer"/>
            </LinearLayout>

            -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="0dp">
                <!--
                <ImageButton
                    android:id="@+id/rewind_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rewind"/>
                <ImageButton
                    android:id="@+id/play_button"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/play"/>
                <ImageButton
                    android:id="@+id/forward_button"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/fastforward"/>
                -->
                <ImageView
                    android:id="@+id/play_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_play"/>
                <SeekBar
                    android:id="@+id/progress_bar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal" />
                <TextView
                    android:id="@+id/time_info"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center_vertical|end"
                    android:text="@string/default_time_text"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent">

    </android.support.v7.widget.Toolbar>

</RelativeLayout>
